/* pages/session/edit/index.wxss */
@import "../../../styles/variable.wxss";

.session-edit-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 表单滚动区域 */
.form-scroll {
  flex: 1;
  background: var(--color-background);
}

.form-container {
  padding: 32rpx;
  padding-bottom: 160rpx; /* 为底部操作栏留出空间 */
}

/* 表单区块 */
.form-section {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-card);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.section-required {
  font-size: 24rpx;
  color: var(--color-error);
  background: #fff2f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.section-optional {
  font-size: 24rpx;
  color: var(--color-text-light);
  background: var(--color-background);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 表单组 */
.form-group {
  position: relative;
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: 16rpx;
  display: block;
}

/* 选择器字段 */
.picker-field {
  padding: 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--color-text);
  position: relative;
  padding-right: 60rpx;
}

.picker-field.placeholder {
  color: var(--color-text-light);
}

.arrow-icon {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx;
  color: var(--color-text-light);
}

/* 选中的来访者信息 */
.selected-client-info {
  margin-top: 16rpx;
}

.client-card {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: var(--color-background);
  border-radius: 16rpx;
  border: 1rpx solid var(--color-border);
}

.client-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cff9 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.avatar-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

.client-details {
  flex: 1;
}

.client-name {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.client-meta {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-bottom: 8rpx;
}

.client-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 20rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 持续时间选择器 */
.duration-picker {
  display: flex;
  gap: 16rpx;
}

.duration-btn {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text-light);
  transition: all 0.2s ease;
}

.duration-btn.active {
  background: var(--color-primary-light);
  border-color: var(--color-primary);
  color: var(--color-primary);
  font-weight: 500;
}

.duration-btn.custom-duration {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  background: var(--color-background);
}

.duration-btn.custom-duration input {
  width: 100rpx;
  height: 100%;
  text-align: center;
  font-size: 26rpx;
  color: var(--color-text);
  background: transparent;
  border: none;
  outline: none;
}

.duration-btn.custom-duration .unit {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-left: 4rpx;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.radio-item.active {
  background: var(--color-primary-light);
  border-color: var(--color-primary);
  color: var(--color-primary);
  font-weight: 500;
}

.radio-item.active .radio-dot {
  background: var(--color-primary);
  border-color: var(--color-primary);
}

.radio-dot {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid var(--color-border);
  border-radius: 50%;
  margin-right: 12rpx;
  transition: all 0.2s ease;
}

.radio-text {
  font-size: 26rpx;
}

/* 表单输入 */
.form-input {
  width: 100%;
  padding: 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--color-text);
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--color-primary);
}

/* 金额输入 */
.money-input {
  display: flex;
  align-items: center;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  overflow: hidden;
}

.currency {
  padding: 0 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--color-primary);
  border-right: 1rpx solid var(--color-border);
  height: 78rpx;
  display: flex;
  align-items: center;
}

.money-input-field {
  flex: 1;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--color-text);
  border: none;
  outline: none;
  background: transparent;
}

/* 督导开关 */
.supervision-switch {
  transform: scale(0.8);
  transform-origin: right center;
}

/* SOAP表单 */
.soap-form {
  margin-bottom: 32rpx;
}

.soap-section {
  margin-bottom: 24rpx;
}

.soap-section:last-child {
  margin-bottom: 0;
}

.soap-label {
  display: flex;
  flex-direction: column;
  margin-bottom: 12rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
}

.label-desc {
  font-size: 22rpx;
  color: var(--color-text-light);
  margin-top: 4rpx;
}

.soap-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  box-sizing: border-box;
  line-height: 1.5;
}

.soap-textarea:focus {
  border-color: var(--color-primary);
}

/* 普通文本域 */
.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  box-sizing: border-box;
  line-height: 1.5;
}

.textarea-counter {
  text-align: right;
  font-size: 22rpx;
  color: var(--color-text-light);
  margin-top: 8rpx;
}

/* 附件上传 */
.attachments {
  margin-top: 16rpx;
}

.attachment-section {
  margin-bottom: 32rpx;
}

.attachment-section:last-child {
  margin-bottom: 0;
}

.attachment-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.label-tip {
  font-size: 22rpx;
  color: var(--color-text-light);
}

/* 图片上传 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-preview {
  width: 100%;
  height: 100%;
}

.image-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: var(--color-background);
  border: 2rpx dashed var(--color-border);
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.upload-btn:active {
  background: #f0f0f0;
  border-color: var(--color-primary);
}

.upload-icon {
  font-size: 48rpx;
  color: var(--color-text-light);
  margin-bottom: 12rpx;
}

.upload-text {
  font-size: 24rpx;
  color: var(--color-text-light);
}

/* 文件上传 */
.file-list, .audio-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.file-item, .audio-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  position: relative;
}

.file-item:active, .audio-item:active {
  background: #f0f0f0;
}

.file-icon, .audio-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.file-info, .audio-info {
  flex: 1;
}

.file-name, .audio-name {
  font-size: 26rpx;
  color: var(--color-text);
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 400rpx;
}

.file-size, .audio-duration {
  font-size: 22rpx;
  color: var(--color-text-light);
}

.file-remove, .audio-remove {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--color-text-light);
  border-radius: 50%;
  transition: all 0.2s ease;
}

.file-remove:active, .audio-remove:active {
  background: #e0e0e0;
}

.audio-controls {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

/* 同步到日程 */
.sync-section {
  margin-top: 32rpx;
}

.sync-toggle {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sync-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.sync-icon {
  font-size: 32rpx;
}

.sync-text {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text);
}

.sync-options {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid var(--color-border);
}

.remind-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.remind-option {
  padding: 12rpx 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 24rpx;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.remind-option.active {
  background: var(--color-primary-light);
  border-color: var(--color-primary);
  color: var(--color-primary);
  font-weight: 500;
}

/* 底部占位 */
.bottom-spacer {
  height: 120rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 32rpx;
  border-top: 1rpx solid var(--color-border);
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
}

.action-left, .action-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.draft-btn {
  padding: 20rpx 32rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  font-weight: 500;
  transition: all 0.2s ease;
}

.draft-btn:active {
  background: #e0e0e0;
}

.cancel-btn {
  padding: 20rpx 40rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
  transition: all 0.2s ease;
}

.cancel-btn:active {
  background: #e0e0e0;
}

.submit-btn {
  padding: 20rpx 40rpx;
  background: var(--color-primary);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  transition: all 0.2s ease;
}

.submit-btn:active {
  background: var(--color-primary-dark);
  transform: translateY(-2rpx);
}

.submit-btn.disabled {
  background: #cccccc;
  color: #999999;
}

.submit-btn.disabled:active {
  transform: none;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: white;
  padding: 48rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
}