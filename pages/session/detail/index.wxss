.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.basic-info {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.status-2 {
  color: #52c41a;
}

.status-3 {
  color: #faad14;
}

.status-4 {
  color: #ff4d4f;
}

.section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #1890ff;
}

.soap-section {
  margin-bottom: 24rpx;
}

.soap-section:last-child {
  margin-bottom: 0;
}

.soap-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1890ff;
  margin-bottom: 12rpx;
}

.soap-content {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
}

.summary, .homework, .next-plan {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.attachments {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.attachment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  border: 1rpx solid #e8e8e8;
}

.attachment-name {
  font-size: 28rpx;
  color: #333;
}

.attachment-type {
  font-size: 24rpx;
  color: #666;
  padding: 4rpx 12rpx;
  background: #e6f7ff;
  border-radius: 4rpx;
}

.action-bar {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 20rpx;
  background: white;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.edit-btn {
  background: #1890ff;
  color: white;
}

.delete-btn {
  background: #ff4d4f;
  color: white;
}
