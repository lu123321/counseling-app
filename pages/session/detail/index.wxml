<view class="container">
  <!-- 咨询基本信息 -->
  <view class="basic-info">
    <view class="info-item">
      <text class="label">咨询时间：</text>
      <text class="value">{{sessionData.sessionTime}}</text>
    </view>
    <view class="info-item">
      <text class="label">咨询时长：</text>
      <text class="value">{{sessionData.duration}}分钟</text>
    </view>
    <view class="info-item">
      <text class="label">咨询方式：</text>
      <text class="value">{{sessionData.sessionModeText}}</text>
    </view>
    <view class="info-item">
      <text class="label">咨询费用：</text>
      <text class="value">¥{{sessionData.fee}}</text>
    </view>
    <view class="info-item">
      <text class="label">来访者：</text>
      <text class="value">{{sessionData.clientName}}</text>
    </view>
    <view class="info-item">
      <text class="label">咨询状态：</text>
      <text class="value status-{{sessionData.status}}">{{sessionData.statusText}}</text>
    </view>
  </view>

  <!-- SOAP记录 -->
  <view class="section">
    <view class="section-title">咨询记录（SOAP格式）</view>
    
    <view class="soap-section">
      <text class="soap-title">主观感受 (S)</text>
      <text class="soap-content">{{sessionData.subjective || '无记录'}}</text>
    </view>
    
    <view class="soap-section">
      <text class="soap-title">客观观察 (O)</text>
      <text class="soap-content">{{sessionData.objective || '无记录'}}</text>
    </view>
    
    <view class="soap-section">
      <text class="soap-title">评估分析 (A)</text>
      <text class="soap-content">{{sessionData.assessment || '无记录'}}</text>
    </view>
    
    <view class="soap-section">
      <text class="soap-title">计划建议 (P)</text>
      <text class="soap-content">{{sessionData.plan || '无记录'}}</text>
    </view>
  </view>

  <!-- 咨询摘要 -->
  <view class="section" wx:if="{{sessionData.contentSummary}}">
    <view class="section-title">内容摘要</view>
    <text class="summary">{{sessionData.contentSummary}}</text>
  </view>

  <!-- 家庭作业 -->
  <view class="section" wx:if="{{sessionData.homework}}">
    <view class="section-title">家庭作业</view>
    <text class="homework">{{sessionData.homework}}</text>
  </view>

  <!-- 下次计划 -->
  <view class="section" wx:if="{{sessionData.nextPlan}}">
    <view class="section-title">下次咨询计划</view>
    <text class="next-plan">{{sessionData.nextPlan}}</text>
  </view>

  <!-- 附件 -->
  <view class="section" wx:if="{{sessionData.attachments && sessionData.attachments.length > 0}}">
    <view class="section-title">附件</view>
    <view class="attachments">
      <view class="attachment-item" wx:for="{{sessionData.attachments}}" wx:key="index">
        <text class="attachment-name">{{item.name}}</text>
        <text class="attachment-type">{{item.type === 1 ? '文档' : item.type === 2 ? '音频' : '图片'}}</text>
      </view>
    </view>
  </view>

  <!-- 底部操作按钮 -->
  <view class="action-bar">
    <button class="btn edit-btn" bindtap="onEdit">编辑记录</button>
    <button class="btn delete-btn" bindtap="onDelete">删除</button>
  </view>
</view>