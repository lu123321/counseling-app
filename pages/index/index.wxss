/* pages/index/index.wxss */
@import "../../styles/variable.wxss";

.index-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 100%);
  padding-bottom: 40rpx;
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 32rpx 20rpx;
  color: var(--color-text-secondary);
  font-size: 26rpx;
}

.date {
  font-weight: 500;
}

.weather {
  font-size: 24rpx;
}

/* 用户欢迎区 */
.welcome-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.15);
}

.user-detail {
  flex: 1;
}

.greeting {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.qualification {
  font-size: 26rpx;
  color: var(--color-text-light);
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.notification {
  position: relative;
  width: 64rpx;
  height: 64rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.notification-icon {
  width: 32rpx;
  height: 32rpx;
}

.badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  background: #ff4d4f;
  color: white;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

/* 统计卡片 */
.stats-section {
  padding: 0 32rpx 40rpx;
}

.stats-card {
  background: linear-gradient(135deg, #1890ff 0%, #36cff9 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 12rpx 40rpx rgba(24, 144, 255, 0.2);
  color: white;
  pointer-events: auto;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  /* 强制设置可点击区域 */
  width: 100%;
  height: 100%;
  /* 扩大点击热区 */
  padding: 20rpx 0;
  /* 核心：开启指针事件，确保点击生效 */
  pointer-events: auto;
  /* 提高层级，避免被遮挡 */
  z-index: 10;
  /* 可选：添加点击反馈 */
  cursor: pointer;
  position: relative;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  opacity: 0.9;
}

.divider {
  width: 1rpx;
  background: rgba(255, 255, 255, 0.3);
  height: 60rpx;
  margin: 0 32rpx;
}

/* 快捷操作 */
.quick-actions {
  padding: 0 32rpx 40rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
}

.more {
  font-size: 26rpx;
  color: var(--color-primary);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(24, 144, 255, 0.1);
}

.action-grid {
  display: flex;
  justify-content: space-between;
  gap: 32rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  background: white;
  border-radius: 20rpx;
  box-shadow: var(--shadow-card);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-card-hover);
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
}

.action-icon.record {
  color: #1890ff;
}

.action-icon.client {
  color: #52c41a;
}

.action-icon.schedule {
  color: #faad14;
}

.action-icon.finance {
  color: #722ed1;
}

.action-text {
  font-size: 26rpx;
  color: var(--color-text);
  font-weight: 500;
}

/* 今日日程 */
.today-schedule {
  padding: 0 32rpx 40rpx;
}

.schedule-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: var(--shadow-card);
}

.schedule-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--color-border);
  transition: background-color 0.2s ease;
}

.schedule-item:active {
  background-color: var(--color-primary-light);
}

.schedule-item:last-child {
  border-bottom: none;
}

.schedule-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 140rpx;
  padding-right: 32rpx;
}

.time {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 4rpx;
}

.duration {
  font-size: 24rpx;
  color: var(--color-text-light);
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.schedule-detail {
  flex: 1;
}

.schedule-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: 12rpx;
}

.schedule-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location {
  font-size: 24rpx;
  color: var(--color-text-light);
}

.status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.status.pending {
  background: #fffbe6;
  color: #faad14;
}

.status.in-progress {
  background: #e6f7ff;
  color: #1890ff;
}

.status.completed {
  background: #f6ffed;
  color: #52c41a;
}

.status.cancelled {
  background: #fff2f0;
  color: #ff4d4f;
}

.schedule-arrow {
  font-size: 48rpx;
  color: var(--color-text-light);
  margin-left: 16rpx;
}

/* 最近来访者 */
.recent-clients {
  padding: 0 32rpx 40rpx;
}

.client-scroll {
  white-space: nowrap;
  width: 100%;
}

.client-list {
  display: inline-flex;
  gap: 24rpx;
}

.client-card {
  display: inline-flex;
  flex-direction: column;
  width: 300rpx;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-card);
  transition: all 0.3s ease;
}

.client-card:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-card-hover);
}

.client-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1890ff 0%, #36cff9 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.avatar-text {
  color: white;
  font-size: 36rpx;
  font-weight: 600;
}

.client-info {
  margin-bottom: 24rpx;
}

.client-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.client-meta {
  font-size: 26rpx;
  color: var(--color-text-secondary);
  margin-bottom: 16rpx;
}

.client-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 22rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.client-sessions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: var(--color-text-light);
}

.session-count {
  font-weight: 500;
}

.session-time {
  font-size: 22rpx;
}

/* 订阅提醒 */
.subscription-reminder {
  margin: 0 32rpx 40rpx;
  background: linear-gradient(135deg, #722ed1 0%, #b37feb 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  color: white;
  box-shadow: 0 12rpx 40rpx rgba(114, 46, 209, 0.2);
}

.reminder-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.reminder-icon {
  font-size: 48rpx;
}

.reminder-text {
  flex: 1;
}

.reminder-title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.reminder-desc {
  font-size: 24rpx;
  opacity: 0.9;
}

.reminder-action {
  background: white;
  color: #722ed1;
  font-size: 26rpx;
  font-weight: 600;
  padding: 12rpx 24rpx;
  border-radius: 40rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  background: white;
  border-radius: 20rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-bottom: 32rpx;
  text-align: center;
}

.empty-action {
  font-size: 26rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 16rpx 48rpx;
  border-radius: 40rpx;
  font-weight: 500;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: var(--color-text-light);
  font-size: 26rpx;
}

/* 响应式适配 */
@media (min-width: 768px) {
  .index-page {
    max-width: 750px;
    margin: 0 auto;
  }
}