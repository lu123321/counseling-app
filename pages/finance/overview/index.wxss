.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 时间筛选 */
.time-filter {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 30rpx 20rpx;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.filter-left, .filter-center, .filter-right {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.filter-center {
  flex: 1;
  justify-content: center;
  gap: 12rpx;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
}

.current-month {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 财务概览卡片 */
.overview-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 30rpx 20rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.card-title {
  font-size: 28rpx;
  color: #666;
}

.card-amount {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  color: #333;
}

.income-card .card-amount {
  color: #52c41a;
}

.expense-card .card-amount {
  color: #ff4d4f;
}

.balance-card .card-amount {
  color: #1890ff;
}

.card-change {
  font-size: 24rpx;
  font-weight: 500;
}

.card-change.positive {
  color: #52c41a;
}

.card-change.negative {
  color: #ff4d4f;
}

.card-tip {
  font-size: 24rpx;
  color: #999;
}

/* 图表区域 */
.chart-section {
  background: white;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #1890ff;
}

.chart-legend {
  display: flex;
  gap: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.legend-color {
  width: 20rpx;
  height: 20rpx;
  border-radius: 4rpx;
}

.income-color {
  background-color: #52c41a;
}

.expense-color {
  background-color: #ff4d4f;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

.chart-container {
  height: 300rpx;
  position: relative;
}

.bar-chart {
  display: flex;
  height: 100%;
  position: relative;
}

.chart-grid {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.grid-line {
  border-top: 1rpx dashed #e8e8e8;
  height: 0;
}

.chart-bars {
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  width: 100%;
  height: 80%;
  margin-top: 20rpx;
}

.chart-bar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
  height: 100%;
  position: relative;
}

.month-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 12rpx;
  position: absolute;
  bottom: -40rpx;
}

.bars-wrapper {
  display: flex;
  gap: 8rpx;
  height: 100%;
  width: 60rpx;
  align-items: flex-end;
  position: relative;
}

.income-bar {
  width: 26rpx;
  background-color: #52c41a;
  border-radius: 4rpx 4rpx 0 0;
  transition: height 0.3s ease;
  position: absolute;
  left: 0;
  bottom: 0;
}

.expense-bar {
  width: 26rpx;
  background-color: #ff4d4f;
  border-radius: 4rpx 4rpx 0 0;
  transition: height 0.3s ease;
  position: absolute;
  right: 0;
  bottom: 0;
}

/* 分类区域 */
.category-section {
  background: white;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.category-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.2s;
}

.category-item:active {
  background: #f0f0f0;
}

.category-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-img {
  width: 40rpx;
  height: 40rpx;
}

.category-details {
  display: flex;
  flex-direction: column;
}

.category-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.category-count {
  font-size: 22rpx;
  color: #999;
}

.category-amount {
  text-align: right;
}

.category-amount .amount {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.category-amount .percentage {
  font-size: 22rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 最近交易记录 */
.recent-section {
  background: white;
  border-radius: 16rpx;
  margin: 20rpx;
  padding: 30rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #fafafa;
  transition: all 0.2s;
}

.record-item:active {
  background: #f0f0f0;
}

.record-type {
  margin-right: 20rpx;
}

.type-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.type-icon-img {
  width: 40rpx;
  height: 40rpx;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.record-category {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.record-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.record-time {
  font-size: 22rpx;
  color: #999;
}

.record-amount {
  text-align: right;
}

.record-amount .amount {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.record-amount .amount.income {
  color: #52c41a;
}

.record-amount .amount.expense {
  color: #ff4d4f;
}

.payment-method {
  font-size: 22rpx;
  color: #666;
  background: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 300rpx;
  background: #1890ff;
  color: white;
  border-radius: 44rpx;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-text {
  font-size: 24rpx;
  color: #1890ff;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #1890ff, #52c41a);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
  z-index: 100;
}

.fab-icon {
  width: 48rpx;
  height: 48rpx;
}