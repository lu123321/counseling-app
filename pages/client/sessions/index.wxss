.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 来访者信息卡片 */
.client-info-card {
  background: white;
  padding: 30rpx;
  border-radius: 0 0 20rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.client-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.client-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 2rpx solid #f0f0f0;
}

.client-details {
  flex: 1;
}

.client-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.client-meta {
  display: flex;
  gap: 20rpx;
  margin-bottom: 12rpx;
}

.client-meta-item {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.client-status {
  display: flex;
}

.status-badge {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-1 { background: #e6f7ff; color: #1890ff; }
.status-2 { background: #f6ffed; color: #52c41a; }
.status-3 { background: #fff7e6; color: #fa8c16; }
.status-4 { background: #fff1f0; color: #ff4d4f; }

.client-stats {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 600;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: white;
  padding: 20rpx 30rpx;
  margin: 20rpx 0;
  border-radius: 12rpx;
}

.filter-item, .sort-item, .search-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.filter-icon, .sort-icon, .search-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 8rpx;
}

.search-item {
  background: #f5f5f5;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
}

.search-icon {
  margin-right: 8rpx;
  margin-left: 0;
}

/* 筛选面板 */
.filter-panel {
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
  animation: slideDown 0.3s ease;
}

.filter-options {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.filter-option {
  padding: 12rpx 24rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  background: #fafafa;
}

.filter-option.active {
  background: #1890ff;
  color: white;
  border-color: #1890ff;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 咨询列表 */
.session-list {
  padding-bottom: 120rpx;
}

.session-item {
  display: flex;
  align-items: center;
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
}

.session-item:active {
  background: #fafafa;
  transform: scale(0.995);
}

.session-time {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 30rpx;
  min-width: 140rpx;
}

.session-date {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.session-week {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.session-hour {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: 500;
}

.session-content {
  flex: 1;
}

.session-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.session-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.session-details {
  display: flex;
  gap: 20rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.detail-item {
  display: flex;
  align-items: center;
}

.detail-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.detail-text {
  font-size: 24rpx;
  color: #666;
}

.session-summary {
  margin-bottom: 16rpx;
}

.summary-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.session-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.session-tag {
  font-size: 22rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #ccc;
  margin-bottom: 40rpx;
}

.empty-btn {
  width: 300rpx;
  background: #1890ff;
  color: white;
  border-radius: 44rpx;
  font-size: 28rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-text {
  font-size: 24rpx;
  color: #999;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-text {
  font-size: 24rpx;
  color: #1890ff;
}

/* 悬浮按钮 */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #1890ff, #52c41a);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
  z-index: 100;
}

.fab-icon {
  width: 48rpx;
  height: 48rpx;
}