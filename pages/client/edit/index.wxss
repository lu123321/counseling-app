/* pages/client/edit/index.wxss */
@import "../../../styles/variable.wxss";

.client-edit-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 页面头部 */
.page-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: white;
  padding: 40rpx 32rpx 24rpx;
  border-bottom: 1rpx solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  font-size: 48rpx;
  color: var(--color-text);
  font-weight: 300;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text);
  flex: 1;
  text-align: center;
  margin: 0 16rpx;
}

.header-actions {
  width: 60rpx;
  height: 60rpx;
}

/* 表单滚动区域 */
.form-scroll {
  flex: 1;
  background: var(--color-background);
}

.form-container {
  padding: 32rpx;
  padding-bottom: 160rpx;
}

/* 表单区块 */
.form-section {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-card);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text);
}

.section-required {
  font-size: 24rpx;
  color: var(--color-error);
  background: #fff2f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.section-optional {
  font-size: 24rpx;
  color: var(--color-text-light);
  background: var(--color-background);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 表单组 - 优化行间距+防溢出 */
.form-group {
  margin-bottom: 40rpx; /* 从32rpx调大，增加行间距 */
  overflow: hidden; /* 新增：防止子元素溢出遮挡下一行 */
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: 16rpx;
  display: block;
}

.required-star {
  color: var(--color-error);
  margin-left: 4rpx;
}

/* 表单输入 - 修复全局样式冲突+行遮挡 */
.form-input {
  width: 100%;
  padding: 24rpx !important; /* 强制覆盖全局20rpx，避免内边距异常 */
  background: var(--color-background) !important; /* 强制覆盖全局#fff */
  border: 1rpx solid var(--color-border) !important; /* 强制覆盖全局#e0e0e0 */
  border-radius: 12rpx !important; /* 强制覆盖全局8rpx */
  font-size: 28rpx;
  color: var(--color-text);
  box-sizing: border-box;
  transition: border-color 0.2s ease;
  line-height: 1.4; /* 新增：文字行高适配，避免文字挤压 */
  min-height: 88rpx; /* 新增：固定最小高度，避免内容过少时行高塌陷 */
}

.form-input:focus {
  border-color: var(--color-primary);
  outline: none;
}

.form-input.error {
  border-color: var(--color-error);
}

.error-message {
  font-size: 22rpx;
  color: var(--color-error);
  margin-top: 8rpx;
}

/* 单选按钮组 */
.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.radio-item.active {
  background: var(--color-primary-light);
  border-color: var(--color-primary);
  color: var(--color-primary);
  font-weight: 500;
}

.radio-item.active .radio-dot {
  background: var(--color-primary);
  border-color: var(--color-primary);
}

.radio-dot {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid var(--color-border);
  border-radius: 50%;
  margin-right: 12rpx;
  transition: all 0.2s ease;
}

.radio-text {
  font-size: 26rpx;
}

/* 选择器字段 */
.picker-field {
  padding: 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--color-text);
  position: relative;
  transition: border-color 0.2s ease;
}

.picker-field:active {
  border-color: var(--color-primary);
}

.picker-field.placeholder {
  color: var(--color-text-light);
}

/* 紧急联系人 */
.emergency-contact {
  margin-top: 24rpx;
}

.sub-title {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: 16rpx;
}

.sub-form-group {
  margin-bottom: 16rpx;
}

.sub-form-group:last-child {
  margin-bottom: 0;
}

/* 状态选择器 */
.status-selector {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.status-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.status-item.active {
  background: rgba(255, 255, 255, 0.8);
  border-color: var(--color-border);
  font-weight: 500;
}

.status-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  border: 2rpx solid white;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.status-text {
  font-size: 26rpx;
}

/* 标签管理 */
.common-tags, .custom-tags {
  margin-bottom: 32rpx;
}

.common-tags:last-child, .custom-tags:last-child {
  margin-bottom: 0;
}

.tags-title {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: 16rpx;
}

.tags-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 12rpx 20rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 20rpx;
  font-size: 24rpx;
  color: var(--color-text);
  transition: all 0.2s ease;
}

.tag-item.selected {
  background: var(--color-primary-light);
  border-color: var(--color-primary);
  color: var(--color-primary);
  font-weight: 500;
}

.tag-text {
  font-size: 24rpx;
}

/* 自定义标签输入 */
.tags-input-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag-input {
  flex: 1;
  padding: 20rpx 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  box-sizing: border-box;
}

.tag-input:focus {
  border-color: var(--color-primary);
  outline: none;
}

.add-tag-btn {
  padding: 20rpx 32rpx;
  background: var(--color-primary);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: white;
  font-weight: 500;
  transition: all 0.2s ease;
}

.add-tag-btn:active {
  background: var(--color-primary-dark);
  transform: translateY(-2rpx);
}

/* 已选标签 */
.selected-tags {
  margin-top: 16rpx;
}

.selected-title {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-bottom: 12rpx;
}

.selected-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.selected-tag {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: var(--color-primary-light);
  border: 1rpx solid var(--color-primary);
  border-radius: 20rpx;
  color: var(--color-primary);
  font-size: 24rpx;
  font-weight: 500;
}

.remove-tag {
  margin-left: 8rpx;
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--color-primary);
  border-radius: 50%;
  transition: all 0.2s ease;
}

.remove-tag:active {
  background: rgba(24, 144, 255, 0.2);
}

/* 文本域 */
.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  box-sizing: border-box;
  line-height: 1.5;
  resize: none;
}

.form-textarea:focus {
  border-color: var(--color-primary);
  outline: none;
}

.textarea-counter {
  text-align: right;
  font-size: 22rpx;
  color: var(--color-text-light);
  margin-top: 8rpx;
}

/* 底部占位 */
.bottom-spacer {
  height: 120rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 32rpx;
  border-top: 1rpx solid var(--color-border);
  z-index: 100;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.cancel-btn {
  flex: 1;
  padding: 24rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
  text-align: center;
  transition: all 0.2s ease;
}

.cancel-btn:active {
  background: #e0e0e0;
}

.save-btn {
  flex: 2;
  padding: 24rpx;
  background: var(--color-primary);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: white;
  font-weight: 500;
  text-align: center;
  transition: all 0.2s ease;
}

.save-btn:active {
  background: var(--color-primary-dark);
  transform: translateY(-2rpx);
}

.save-btn.disabled {
  background: #cccccc;
  color: #999999;
}

.save-btn.disabled:active {
  transform: none;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.loading-content {
  background: white;
  padding: 48rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
}