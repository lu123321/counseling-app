/* pages/client/select/index.wxss */
@import "../../../styles/variable.wxss";

.client-select-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 搜索栏 */
.search-bar {
  padding: 24rpx 32rpx;
  background: white;
  border-bottom: 1rpx solid var(--color-border);
}

.search-container {
  display: flex;
  align-items: center;
  background: var(--color-background);
  border-radius: 40rpx;
  padding: 0 24rpx;
  height: 80rpx;
}

.search-icon {
  font-size: 32rpx;
  color: var(--color-text-light);
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: var(--color-text);
  height: 100%;
}

.clear-btn {
  font-size: 32rpx;
  color: var(--color-text-light);
  padding: 8rpx;
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.clear-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

/* 快捷操作 */
.quick-actions {
  background: white;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid var(--color-border);
}

.quick-scroll {
  white-space: nowrap;
  width: 100%;
}

.quick-list {
  display: inline-flex;
  gap: 24rpx;
}

.quick-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
  padding: 20rpx 16rpx;
  background: var(--color-background);
  border-radius: 20rpx;
  transition: all 0.3s ease;
}

.quick-item:active {
  transform: translateY(-4rpx);
}

.quick-item.active {
  background: var(--color-primary-light);
  color: var(--color-primary);
}

.quick-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.quick-text {
  font-size: 22rpx;
  font-weight: 500;
  text-align: center;
  line-height: 1.2;
}

/* 滚动区域 */
.client-scroll {
  flex: 1;
}

.list-header {
  padding: 32rpx 32rpx 24rpx;
  background: white;
}

.total-count {
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
}

.selected-count {
  color: var(--color-primary);
  font-weight: 600;
}

/* 来访者列表 */
.client-list {
  padding: 0 32rpx 40rpx;
}

.client-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  background: white;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-card);
  transition: all 0.3s ease;
}

.client-item:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-card-hover);
}

/* 选择框 */
.select-checkbox {
  margin-right: 24rpx;
  flex-shrink: 0;
}

.checkbox {
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid var(--color-border);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.checkbox.checked {
  background: var(--color-primary);
  border-color: var(--color-primary);
}

.checkbox-inner {
  width: 24rpx;
  height: 24rpx;
  background: white;
  border-radius: 50%;
}

/* 来访者信息 */
.client-info {
  flex: 1;
  min-width: 0;
}

.client-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.client-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #1890ff 0%, #36cff9 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.avatar-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

.client-main {
  flex: 1;
}

.client-name {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 8rpx;
}

.client-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  display: inline-block;
}

.client-status.status-1 {
  background: #e6f7ff;
  color: #1890ff;
}

.client-status.status-2 {
  background: #f6ffed;
  color: #52c41a;
}

.client-status.status-3 {
  background: #fff7e6;
  color: #faad14;
}

.client-status.status-4 {
  background: #f6f6f6;
  color: #666;
}

/* 来访者详情 */
.client-details {
  background: var(--color-background);
  border-radius: 16rpx;
  padding: 20rpx;
}

.client-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.meta-item {
  font-size: 24rpx;
  color: var(--color-text-light);
}

.client-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.tag {
  font-size: 20rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.client-session-info {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: var(--color-text-light);
}

.session-count, .last-session {
  display: flex;
  align-items: center;
  gap: 4rpx;
}

/* 详情箭头 */
.detail-arrow {
  font-size: 48rpx;
  color: var(--color-text-light);
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
  background: white;
  margin: 32rpx;
  border-radius: 20rpx;
  box-shadow: var(--shadow-card);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
  height: 120rpx;
  line-height: 120rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--color-text);
  font-weight: 500;
  margin-bottom: 16rpx;
  text-align: center;
}

.empty-subtext {
  font-size: 26rpx;
  color: var(--color-text-light);
  margin-bottom: 48rpx;
  text-align: center;
  max-width: 400rpx;
}

.empty-action {
  font-size: 28rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 20rpx 48rpx;
  border-radius: 40rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.empty-action:active {
  background: rgba(24, 144, 255, 0.2);
  transform: translateY(-2rpx);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx;
  color: var(--color-text-light);
  font-size: 26rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 32rpx;
  border-top: 1rpx solid var(--color-border);
  display: flex;
  justify-content: space-between;
  align-items: center;
  z-index: 100;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.selected-info {
  flex: 1;
}

.selected-text {
  font-size: 26rpx;
  color: var(--color-text);
  font-weight: 500;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.cancel-btn {
  padding: 16rpx 32rpx;
  background: var(--color-background);
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--color-text);
  font-weight: 500;
  transition: all 0.2s ease;
}

.cancel-btn:active {
  background: #e0e0e0;
}

.confirm-btn {
  padding: 16rpx 32rpx;
  background: var(--color-primary);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: white;
  font-weight: 500;
  transition: all 0.2s ease;
}

.confirm-btn:active {
  background: var(--color-primary-dark);
  transform: translateY(-2rpx);
}