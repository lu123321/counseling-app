/* pages/client/detail/index.wxss */
@import "../../../styles/variable.wxss";

.client-detail-page {
  min-height: 100vh;
  background: var(--color-background);
  padding-bottom: 160rpx; /* 为操作栏留出空间 */
}

/* 页面头部 */
.page-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background: white;
  padding: 40rpx 32rpx 24rpx;
  border-bottom: 1rpx solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  font-size: 48rpx;
  color: var(--color-text);
  font-weight: 300;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.header-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--color-text);
  flex: 1;
  text-align: center;
  margin: 0 16rpx;
}

.header-actions {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.action-btn {
  font-size: 28rpx;
  color: var(--color-primary);
  font-weight: 500;
}

/* 来访者信息卡片 */
.client-info-card {
  background: white;
  margin: 32rpx 32rpx 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-card);
}

.info-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.client-avatar {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}

.avatar-text {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1890ff 0%, #36cff9 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 48rpx;
  font-weight: 600;
}

.avatar-status {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid white;
  border-radius: 50%;
}

.avatar-status.status-1 {
  background: #52c41a; /* 进行中 - 绿色 */
}

.avatar-status.status-2 {
  background: #1890ff; /* 已结案 - 蓝色 */
}

.avatar-status.status-3 {
  background: #faad14; /* 中断 - 橙色 */
}

.avatar-status.status-4 {
  background: #666666; /* 转介 - 灰色 */
}

.client-basic {
  flex: 1;
}

.client-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.client-name {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-right: 20rpx;
}

.client-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.client-status.status-1 {
  background: #f6ffed;
  color: #52c41a;
}

.client-status.status-2 {
  background: #e6f7ff;
  color: #1890ff;
}

.client-status.status-3 {
  background: #fff7e6;
  color: #faad14;
}

.client-status.status-4 {
  background: #f6f6f6;
  color: #666;
}

.client-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.meta-item {
  font-size: 26rpx;
  color: var(--color-text-light);
}

/* 联系信息 */
.contact-info {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: var(--color-background);
  border-radius: 16rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 32rpx;
  text-align: center;
}

.contact-detail {
  flex: 1;
}

.contact-label {
  font-size: 22rpx;
  color: var(--color-text-light);
  margin-bottom: 4rpx;
}

.contact-value {
  font-size: 26rpx;
  color: var(--color-text);
  font-weight: 500;
}

/* 标签区域 */
.tags-section {
  margin-top: 16rpx;
}

.section-label {
  font-size: 26rpx;
  color: var(--color-text);
  font-weight: 500;
  margin-bottom: 16rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag {
  font-size: 22rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 统计卡片 */
.stats-card {
  background: white;
  margin: 0 32rpx 24rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-card);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.stats-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text);
}

.stats-period {
  font-size: 24rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.stats-grid {
  display: flex;
  background: var(--color-background);
  border-radius: 16rpx;
  padding: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 16rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 8rpx;
  text-align: center;
  line-height: 1.2;
}

.stat-label {
  font-size: 22rpx;
  color: var(--color-text-light);
  text-align: center;
  line-height: 1.2;
}

.stat-divider {
  width: 1rpx;
  background: var(--color-border);
  height: 60rpx;
  align-self: center;
}

/* 区块容器 */
.section-container {
  background: white;
  margin: 0 32rpx 32rpx;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-card);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--color-text);
}

.section-action {
  font-size: 26rpx;
  color: var(--color-primary);
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(24, 144, 255, 0.1);
}

/* 咨询记录列表 */
.session-list {
  margin-top: 8rpx;
}

.session-item {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1rpx solid var(--color-border);
  transition: background-color 0.2s ease;
}

.session-item:active {
  background-color: var(--color-background);
}

.session-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.session-date {
  width: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.date-day {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--color-text);
  line-height: 1;
}

.date-month {
  font-size: 22rpx;
  color: var(--color-text-light);
  margin-top: 4rpx;
}

.session-info {
  flex: 1;
  min-width: 0;
}

.session-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.session-time {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-text);
}

.session-type {
  font-size: 22rpx;
  color: var(--color-text-light);
  background: var(--color-background);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.session-type.supervision {
  color: #722ed1;
  background: rgba(114, 46, 209, 0.1);
}

.supervision-tag {
  margin-left: 4rpx;
  font-size: 18rpx;
  opacity: 0.8;
}

.session-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.session-meta .meta-item {
  font-size: 22rpx;
  color: var(--color-text-light);
}

.session-summary {
  font-size: 24rpx;
  color: var(--color-text);
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.session-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.session-tags .tag.mini {
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  background: rgba(24, 144, 255, 0.05);
}

.session-status {
  align-self: flex-start;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
  margin-left: 16rpx;
  flex-shrink: 0;
}

.session-status.status-2 {
  background: #f6ffed;
  color: #52c41a;
}

.session-status.status-3 {
  background: #fff2f0;
  color: #ff4d4f;
}

.session-status.status-4 {
  background: #f6f6f6;
  color: #666;
}

/* 空状态 */
.empty-sessions {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.3;
  height: 120rpx;
  line-height: 120rpx;
}

.empty-text {
  font-size: 30rpx;
  color: var(--color-text);
  font-weight: 500;
  margin-bottom: 16rpx;
  text-align: center;
}

.empty-subtext {
  font-size: 24rpx;
  color: var(--color-text-light);
  margin-bottom: 32rpx;
  text-align: center;
  max-width: 400rpx;
}

.empty-action {
  font-size: 26rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-weight: 500;
}

/* 备注卡片 */
.remark-card {
  background: var(--color-background);
  border-radius: 16rpx;
  padding: 24rpx;
}

.remark-content {
  font-size: 26rpx;
  color: var(--color-text);
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.remark-footer {
  border-top: 1rpx solid var(--color-border);
  padding-top: 16rpx;
}

.remark-time {
  font-size: 22rpx;
  color: var(--color-text-light);
}

/* 诊断与方案 */
.clinical-section {
  margin-bottom: 24rpx;
}

.clinical-section:last-child {
  margin-bottom: 0;
}

.clinical-label {
  font-size: 26rpx;
  font-weight: 500;
  color: var(--color-text);
  margin-bottom: 12rpx;
}

.clinical-content {
  font-size: 24rpx;
  color: var(--color-text);
  line-height: 1.5;
  background: var(--color-background);
  border-radius: 12rpx;
  padding: 20rpx;
  white-space: pre-wrap;
}

/* 操作按钮栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx 32rpx;
  border-top: 1rpx solid var(--color-border);
  z-index: 100;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.action-grid {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
  padding: 8rpx 0;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
  height: 40rpx;
  line-height: 40rpx;
}

.action-text {
  font-size: 22rpx;
  color: var(--color-text);
  font-weight: 500;
  line-height: 1.2;
}

/* 底部安全区域 */
.safe-area {
  height: env(safe-area-inset-bottom);
  background: white;
}

/* 操作菜单 */
.action-menu-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.action-menu {
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 32rpx 0;
  width: 100%;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx 48rpx;
  font-size: 30rpx;
  color: var(--color-text);
  transition: background-color 0.2s ease;
}

.menu-item:active {
  background: var(--color-background);
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 32rpx;
  text-align: center;
}

.menu-item.danger {
  color: var(--color-error);
}

.menu-item.danger .menu-icon {
  opacity: 1;
}