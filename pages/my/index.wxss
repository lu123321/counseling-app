/* pages/my/index.wxss - 优化间距版 */
@import "../../styles/variable.wxss";

.my-page {
  min-height: 100vh;
  background: var(--color-background);
  padding-bottom: 40rpx;
}

/* 用户卡片 - 增加底部空隙 */
.user-card {
  position: relative;
  padding: 40rpx 32rpx 60rpx; /* 保持底部空隙 */
  background: linear-gradient(135deg, #1890ff 0%, #36cff9 100%);
  color: white;
  border-radius: 0 0 24rpx 24rpx;
  overflow: hidden;
  margin-bottom: 20rpx; /* 增加卡片底部空隙 */
}

.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(255,255,255,0.1) 0%, transparent 50%);
}

.user-header {
  position: relative;
  display: flex;
  align-items: flex-start;
  z-index: 1;
}

/* 头像区域 */
.avatar-section {
  position: relative;
  margin-right: 24rpx;
  margin-top: 8rpx;
}

.avatar-container {
  position: relative;
}

.avatar-emoji, .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.avatar-emoji {
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.avatar-status {
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
  width: 20rpx;
  height: 20rpx;
  background: #52c41a;
  border: 2rpx solid white;
  border-radius: 50%;
}

.edit-avatar {
  position: absolute;
  bottom: -6rpx;
  right: -6rpx;
  width: 36rpx;
  height: 36rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 18rpx;
  color: var(--color-primary);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 用户信息 */
.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.user-qualification {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
  line-height: 1.4;
}

.user-stats {
  display: flex;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 16rpx;
  margin-top: 4rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.stat-label {
  font-size: 22rpx;
  opacity: 0.9;
  line-height: 1.2;
}

.divider {
  width: 1rpx;
  background: rgba(255, 255, 255, 0.3);
  height: 40rpx;
  align-self: center;
}

/* 设置按钮 */
.setting-btn {
  position: absolute;
  top: -8rpx;
  right: 0;
  width: 56rpx;
  height: 56rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.setting-icon {
  font-size: 28rpx;
}

/* 订阅卡片 - 增加上下间距 */
.subscription-card {
  background: white;
  margin: 0 32rpx 32rpx; /* 改为正数，不再上移，增加底部间距 */
  border-radius: 16rpx;
  padding: 28rpx; /* 增加内边距 */
  box-shadow: 0 8rpx 32rpx rgba(24, 144, 255, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid rgba(24, 144, 255, 0.1);
  min-height: 120rpx; /* 设置最小高度 */
}

.subscription-header {
  display: flex;
  align-items: center;
}

.subscription-icon {
  font-size: 40rpx;
  margin-right: 20rpx; /* 增加图标右边距 */
}

.subscription-info {
  flex: 1;
}

.subscription-title {
  font-size: 30rpx; /* 稍微增大 */
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 8rpx; /* 增加标题和描述的间距 */
  line-height: 1.3;
}

.subscription-desc {
  font-size: 24rpx; /* 稍微增大 */
  color: var(--color-text-light);
  line-height: 1.4; /* 增加行高 */
}

.subscription-action {
  display: flex;
  align-items: center;
  color: var(--color-primary);
  margin-left: 20rpx; /* 增加左边距 */
  padding-left: 20rpx; /* 增加内边距 */
  border-left: 1rpx solid var(--color-border); /* 添加分隔线 */
  min-width: 140rpx; /* 设置最小宽度 */
}

.action-text {
  font-size: 26rpx;
  font-weight: 500;
  margin-right: 8rpx; /* 增加右边距 */
}

.action-arrow {
  font-size: 32rpx;
  color: var(--color-primary);
  margin-left: 4rpx; /* 增加左边距 */
}

/* 功能列表 - 增加节间距 */
.function-list {
  padding: 0 32rpx;
}

.function-section {
  margin-bottom: 32rpx;
  padding-bottom: 16rpx; /* 增加底部内边距 */
}

.section-title {
  font-size: 28rpx; /* 稍微增大 */
  font-weight: 600;
  color: var(--color-text);
  margin-bottom: 20rpx;
  padding-left: 8rpx;
  letter-spacing: 0.5rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 20rpx;
  background: var(--color-primary);
  border-radius: 2rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  background: white;
  border-radius: 16rpx;
  padding: 28rpx; /* 增加内边距 */
  box-shadow: var(--shadow-card);
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx; /* 增加内边距 */
  transition: transform 0.2s ease;
}

.function-item:active {
  transform: translateY(-4rpx);
}

.function-icon {
  font-size: 40rpx;
  margin-bottom: 12rpx;
  height: 40rpx;
  line-height: 40rpx;
  opacity: 0.9;
}

.function-text {
  font-size: 22rpx;
  color: var(--color-text);
  font-weight: 500;
  text-align: center;
  line-height: 1.3;
}

/* 菜单列表 */
.menu-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: var(--shadow-card);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx; /* 增加垂直内边距 */
  border-bottom: 1rpx solid var(--color-border);
  transition: background-color 0.2s ease;
  min-height: 88rpx; /* 设置最小高度 */
}

.menu-item:active {
  background-color: var(--color-background);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
  width: 32rpx;
  text-align: center;
  opacity: 0.8;
}

.menu-text {
  font-size: 28rpx;
  color: var(--color-text);
  font-weight: 500;
  line-height: 1.3;
}

.menu-tag {
  font-size: 18rpx;
  color: var(--color-primary);
  background: rgba(24, 144, 255, 0.1);
  padding: 3rpx 10rpx;
  border-radius: 10rpx;
  margin-left: 12rpx;
  line-height: 1.2;
}

.menu-arrow {
  font-size: 36rpx;
  color: var(--color-text-light);
  opacity: 0.6;
}

/* 操作按钮 */
.action-buttons {
  padding: 0 32rpx 24rpx;
  margin-top: 8rpx; /* 增加上边距 */
}

.action-btn.logout {
  background: white;
  border: 1rpx solid var(--color-border);
  border-radius: 12rpx;
  padding: 28rpx; /* 增加内边距 */
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--color-error);
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 16rpx rgba(255, 77, 79, 0.1);
}

.action-btn.logout:active {
  background: #fff2f0;
  border-color: var(--color-error);
  transform: translateY(-2rpx);
}

.logout-text {
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 24rpx;
  font-size: 22rpx;
  color: var(--color-text-light);
  opacity: 0.8;
  margin-top: 8rpx; /* 增加上边距 */
}